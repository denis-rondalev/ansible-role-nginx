server {
    server_name {{ grafana_proxy_hostname | default('_', true) }};

    listen 80;
    listen [::]:80;

    location / {
        proxy_set_header Host $http_host;
        return 301 https://$host$request_uri;
    }

    location /grafana/ {
        proxy_set_header Host $http_host;
        return 301 https://$host$request_uri;
    }

    location /prometheus/ {
        return 301 https://$host$request_uri;
    }

    location /blackbox/ {
        return 301 https://$host$request_uri;
    }
}

server {
    server_name {{ grafana_proxy_hostname | default('_', true) }};

    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    include /etc/nginx/includes/https.include;

    ssl_certificate /etc/ssl/certs/nginx-selfsigned.crt;
    ssl_certificate_key /etc/ssl/private/nginx-selfsigned.key;

    location / {
        proxy_set_header Host $http_host;
        proxy_pass http://{{ grafana_address }}:{{ grafana_port }}/grafana/;
    }

    location /grafana/ {
        proxy_set_header Host $http_host;
        proxy_pass http://{{ grafana_address }}:{{ grafana_port }}/grafana/;
    }

    location /prometheus/ {
        proxy_pass http://{{ prometheus_web_listen_address }}/prometheus/;
    }

    location /blackbox/ {
        proxy_pass http://{{ blackbox_exporter_web_listen_address }}/prometheus/;
    }
}
